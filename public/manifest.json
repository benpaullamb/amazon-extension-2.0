{
  "manifest_version": 3,
  "name": "Lamb AMZN Search Helper",
  "version": "2.0.0",
  "description": "A tool that provides more search/filter/sort functionality on Amazon search results pages.",
  "icons": {
    "152": "icon152.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.amazon.co.uk/s*"],
      "js": ["content-script.js"]
    }
  ],
  "action": {
    "default_title": "Lamb AMZN Search Helper",
    "default_popup": "./src/popup/index.html"
  },
  "permissions": ["tabGroups"]
}
