{
  "manifest_version": 3,
  "name": "Amazon Extension",
  "version": "2.0.0",
  "content_scripts": [
    {
      "matches": ["https://*.amazon.co.uk/s*"],
      "js": ["content-script.js"]
    }
  ],
  "action": {
    "default_title": "Amazon Search Helper 2.0",
    "default_popup": "./src/popup/index.html"
  },
  "permissions": ["tabGroups"]
}
